%html
  %head
    %meta(charset="UTF-8")
  %body

  .Chat-side
    = render "/devise/shared/side_bar"

  .Main
    .Main__head
      .Main__head-group
        .Main__head-group-name
          = @group__name
        .Main__head-group-member
          Member：
          %li.member
          - @group.group_users.each do |group_user|
            = group_user.user.name
      .Main__head-edit
        = link_to edit_group_path(@group.id) do
          Edit
    .messages
      = render @messages 
    .Main__form
      .form
        = form_for [@group, @message], id: 'new_message' do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'なにか言ってください'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'おくる', class: 'form__submit'
